{
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "no-undef": "off",
        "no-redeclare": "off",
        "no-inner-declarations": "off",
        "no-constant-condition": "off",
        "no-empty": "off",
        "no-fallthrough": "off",
        "no-async-promise-executor": "off",
        "no-unused-expressions": "off"
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": ["*.js", "*.jsx"],
            "rules": {
                "react/prop-types": "off",
                "react/no-unescaped-entities": "off",
                "react/jsx-uses-react": "off",
                "react/react-in-jsx-scope": "off"
            }
        }
    ]
}
// This ESLint configuration is tailored for a React project using modern JavaScript features.